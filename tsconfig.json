{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./",
    "paths": {
      "@shlim/*": ["packages/*"]
    },
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "packages"
  },
  "include": [
    "packages/*/src/*"
  ],
  "exclude": []
}
