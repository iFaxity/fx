{
  "$schema":"https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [ "dom", "es2015" ],
    "types": [ "node" ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@kirei/*": [ "packages/*" ],
      "babel-plugin-kirei": [ "packages/babel-plugin" ]
    }
  },
  "include": [ "packages/*" ],
  "exclude": [ "**/node_modules" ],
  "references": [
    { "path": "packages/shared" },
    { "path": "packages/fx" },
    { "path": "packages/element" },
    { "path": "packages/router" },
    { "path": "packages/babel-plugin" },
    { "path": "packages/hmr-api" },
    { "path": "packages/vite-plugin" }
  ]
}
