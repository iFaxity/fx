{
  "$schema":"https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [ "dom", "esnext" ],
    "types": [ "node" ],
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@kirei/*": [ "packages/*" ],
      "babel-plugin-kirei": [ "packages/babel-plugin" ]
    },
    "allowJs": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "packages/*/src",
    "packages/globals.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "packages/element/src/api/suspense.ts",
    "packages/element/src/api/emits.ts"
  ]
}
