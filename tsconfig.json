{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./",
    "paths": {
      "@shlim/*": ["packages/*"]
    }
  },
  "references": [
    { "path": "packages/element" },
    { "path": "packages/router" },
    { "path": "packages/store" }
  ],
  "include": ["packages/*"],
  "exclude": ["**/node_modules"]
}
