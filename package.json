{
  "private": true,
  "version": "1.0.1",
  "name": "kirei",
  "workspaces": [
    "packages/*"
  ],
  "nyc": {
    "reporter": "lcov",
    "report-dir": "./cypress/coverage",
    "exclude": [ "cypress" ]
  },
  "scripts": {
    "build": "tsc -b --force",
    "cypress": "cypress open",
    "docs": "typedoc packages/*/src",
    "dev": "vite serve cypress/app -c ./cypress/app/vite.config.js",
    "webpack": "webpack-dev-server --config cypress/app/webpack.config.js",
    "test": "cypress run",
    "test:docker": "docker-compose run --rm cypress"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.0",
    "@cypress/code-coverage": "3.8.1",
    "@cypress/webpack-preprocessor": "5.4.3",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@types/webpack-env": "1.15.2",
    "babel-loader": "8.1.0",
    "babel-plugin-istanbul": "6.0.0",
    "cypress": "4.12.1",
    "mochawesome": "6.1.1",
    "typedoc": "0.18.0",
    "typedoc-plugin-exclude-references": "^1.0.0",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "3.9.7",
    "vite": "^1.0.0-rc.3",
    "vite-plugin-istanbul": "^1.0.0",
    "webpack": "4.44.1"
  }
}
