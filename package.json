{
  "private": true,
  "version": "1.0.1",
  "name": "kirei",
  "workspaces": [
    "packages/*"
  ],
  "nyc": {
    "reporter": "lcov",
    "report-dir": "./cypress/coverage"
  },
  "scripts": {
    "build": "tsc -b --force",
    "cypress": "cypress open",
    "docs": "typedoc --name Kirei --excludeNotExported --mode modules --out docs packages/*/src",
    "dev": "webpack-dev-server --quiet --config cypress/app/webpack.config.js",
    "test": "cypress run",
    "test:docker": "docker-compose run --rm cypress"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.11.0",
    "@cypress/code-coverage": "3.8.1",
    "@cypress/webpack-preprocessor": "5.4.2",
    "@types/webpack-env": "1.15.2",
    "babel-loader": "8.1.0",
    "babel-plugin-istanbul": "6.0.0",
    "cypress": "4.12.1",
    "mochawesome": "6.1.1",
    "typedoc": "0.17.8",
    "typescript": "3.9.7",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  }
}
